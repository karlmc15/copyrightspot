
<div id="content_main" class="full">
  <h1>Blog Entries for <%= @feed.url %></h1>

	<p>Select a blog entry youâ€™d like to search with.</p>
  <ul id="results_listing">
	<% @feed_entries.each do |entry| %>
		<li>
	      <a href="<%= url_for({:action => 'show_entry', :id => entry.id}) %>">

	        <span class="result_title"><%= h entry.title %></span>
	        <span class="result_summary"><%= h entry.clean_abstract.to_ascii %></span>
	      </a>
	      <span class="result_url"><%= h entry.link %></span>
	    </li>
	<% end %>
  </ul>

<%= will_paginate @feed_entries %>

</div>
